= render partial: @post
= render partial: @post.comments

%hr
%div.new_comment
  = form_for @new_comment do |f|
    = f.hidden_field :post_id
    .field
      = f.label :name
      %br/
      = f.text_field :name
    .field
      = f.label :website
      %br/
      = f.text_field :website
    .field
      = f.label :content
      %br/
      = f.text_area :content
    .actions
      = f.submit
